<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Paper Wallet -->
    <style name="error_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Custom for D.A.V.E UI -->
    <style name="Label">
        <item name="android:textSize">25sp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="bLabel">
        <item name="android:textSize">35sp</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    
    <style name="aLabel">
        <item name="android:textSize">20sp</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    
    <style name="aValue">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="Value">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="hValue">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    
    <style name="buyscreenstyle">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#00FF00</item>
        
    </style>
    
    <style name="Value_Inverse">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Label_small">
        <item name="android:textSize">16sp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="Value_small">
        <item name="android:textSize">16sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Instructions">
        <item name="android:textSize">20sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="begin">
        <item name="android:textSize">50sp</item>
       
        <item name="android:textColor">#00FF00</item>
    </style>
    
    <style name="Switch">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button">
        <item name="android:textSize">30sp</item>
        
      
    </style>

    <style name="Button_small">
        <item name="android:textSize">18sp</item>
        <item name="android:background">#1F1F1F88</item>
    </style>

    <style name="BuyButton">
        <item name="android:textSize">40sp</item>
        <item name="android:background">#FF8C00</item>
    </style>

    <style name="BannerBar">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!-- color = alpha, red, green, blue. 0xFF000000 (100% opaque black), and opaque-white would be 0xFFFFFFFF -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>