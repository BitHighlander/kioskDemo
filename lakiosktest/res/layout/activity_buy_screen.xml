    <ImageView
        android:id="@+id/imgUsb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/image_description"
        android:src="@drawable/usb_icon" />

    <ImageView
        android:id="@+id/imgApex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgUsb"
        android:layout_toRightOf="@+id/imgUsb"
        android:contentDescription="@string/image_description"
        android:src="@drawable/apex_icon" />

    <ImageView
        android:id="@+id/imgCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgApex"
        android:layout_toRightOf="@+id/imgApex"
        android:contentDescription="@string/image_description"
        android:src="@drawable/dollar_icon" />

    <Button
        android:id="@+id/BuyButton"
        style="@style/BuyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgApex"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buy"
        android:text="@string/buy_now" />
    
     <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/abort"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

