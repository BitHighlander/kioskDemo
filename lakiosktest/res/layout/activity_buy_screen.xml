<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BuyScreenActivity" >

    <Button
        android:id="@+id/abort"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/abort" />   

    <TextView
        android:id="@+id/AddressLabel"
        style="@style/bLabel"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
		android:text="@string/address_label" />

    <TextView
        android:id="@+id/AddressValue"
        style="@style/aValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddressLabel"
        android:layout_centerHorizontal="true"
        android:hint="@string/address_hint" />

    <TextView
        android:id="@+id/maximum_funds_available_label"
        style="@style/bLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddressValue"

        android:layout_centerHorizontal="true"
        android:text="@string/maximum_funds_available_label" />

    <TextView
        android:id="@+id/maximum_funds_available_value"
        style="@style/bLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/maximum_funds_available_label"
		android:text="0" />

