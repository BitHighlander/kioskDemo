    <TextView
        android:id="@+id/TenderedLabel"
        style="@style/bLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bitcoin_value"
        android:layout_marginTop="20dp"
        android:text="@string/tendered_lable" />

    <TextView
        android:id="@+id/TenderedValue"
        style="@style/bLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
		android:layout_below="@id/TenderedLabel"
