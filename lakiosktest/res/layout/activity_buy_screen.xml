    <TextView
        android:id="@+id/exchange_rate_label"
        style="@style/bLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/maximum_funds_available_value"
        android:text="@string/exchange_rate_label" />

    <TextView
        android:id="@+id/exchange_rate_value"
        style="@style/bLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
		android:layout_below="@id/exchange_rate_label"
        android:text="0" />

    <TextView
        android:id="@+id/bitcoin_label"
        style="@style/bLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/exchange_rate_value"

        android:text="@string/bitcoin_label" />

    <TextView
        android:id="@+id/bitcoin_value"
        style="@style/bLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bitcoin_label"
        android:layout_centerHorizontal="true"
