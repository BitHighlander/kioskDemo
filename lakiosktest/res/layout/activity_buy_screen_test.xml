    <TextView
        android:id="@+id/TenderedLabel"
        style="@style/Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/StatusLabel"
        android:layout_below="@id/bitcoin_label"
        android:layout_marginTop="20dp"
        android:text="@string/tendered_lable" />

    <TextView
        android:id="@+id/TenderedValue"
        style="@style/Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TenderedLabel"
        android:layout_alignLeft="@id/StatusValue"
        android:hint="@string/tendered_value" />

    <Button
        android:id="@+id/BuyButton"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TenderedLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/buy_now" />

    <Button
        android:id="@+id/CancelButton"
        style="@style/BuyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BuyButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/cancel_button" />

    <ImageView
        android:id="@+id/imgUsb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/image_description"
        android:src="@drawable/usb_icon" />

    <ImageView
        android:id="@+id/imgApex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgUsb"
        android:layout_toRightOf="@+id/imgUsb"
        android:contentDescription="@string/image_description"
        android:src="@drawable/apex_icon" />

    <ImageButton
        android:id="@+id/imgCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgApex"
        android:layout_toRightOf="@+id/imgApex"
        android:contentDescription="@string/image_description"
        android:src="@drawable/dollar_icon" />

</RelativeLayout>