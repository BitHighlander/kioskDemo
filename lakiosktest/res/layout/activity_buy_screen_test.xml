    <!-- android:id="@+id/PhoneLabel" -->
    <!-- style="@style/Value_small" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_alignLeft="@id/StatusLabel" -->
